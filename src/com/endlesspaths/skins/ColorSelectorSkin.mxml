<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" width="300" height="300">
	<fx:Metadata>
		[HostComponent("com.endlesspaths.components.ColorSelector")]
	</fx:Metadata>
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>	
	
	<s:Group id="colorBox" width="150" height="150" top="10" left="10">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="#00FF00"/>
			</s:fill>
		</s:Rect>
		<s:Rect blendMode="lighten" width="100%" height="100%">
			<s:fill>
				<s:LinearGradient rotation="0">
					<s:GradientEntry alpha="1.0" color="#FFFFFF" ratio="0"/>
					<s:GradientEntry alpha="0.0" color="#FFFFFF" ratio="1"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		<s:Rect blendMode="multiply" width="100%" height="100%">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry alpha="0.0" color="#FFFFFF" ratio="0"/>
					<s:GradientEntry alpha="1.0" color="#000000" ratio="1"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		<s:Rect height="100%" width="100%">
			<s:stroke>
				<s:SolidColorStroke caps="none" color="#000000" joints="miter" miterLimit="4" weight="1"/>
			</s:stroke>
		</s:Rect>
	</s:Group>
	
	<s:TextInput id="colorAsHex" text="{hostComponent.selectedColor}" />
	
</s:Skin>
